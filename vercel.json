{
        "version": 2,
          "builds": [
              {
                    "src": "api/middleware.js",
                          "use": "@vercel/node"
                              }
                                ],
                                  "routes": [
                                      {
                                            "src": "/api/(.*)",
                                                  "dest": "/api/middleware.js"
                                                      },
                                                          {
                                                                "src": "/(.*)",
                                                                      "dest": "/public/index.html"
                                                                          }
                                                                            ]
                                                                            

}